<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/textViewUserAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pop_userAnswer"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textViewRigthAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="132dp"
        android:text="Answer"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/rigthbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pop_rightBtn"
        android:textAllCaps="false"
        android:layout_marginTop="250dp"
        style="@style/button_style"/>

    <Button
        android:id="@+id/wrongbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pop_wrongBtn"
        android:textAllCaps="false"
        android:layout_marginTop="200dp"
        style="@style/button_style" />

</RelativeLayout>