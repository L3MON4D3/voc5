<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/galleryFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/srchSel_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/gal_searchAnswer"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/search_ET"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:hint="@string/gal_searchHint" />

            <Button
                android:id="@+id/sortSel_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/gal_searchAnswer"
                android:textSize="12dp" />

            <Button
                android:id="@+id/sortDir_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/gal_searchDirection"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <Button
                android:id="@+id/galleryEditBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:text="@string/gal_editBtn" />

            <Button
                android:id="@+id/galleryLearnBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:text="@string/gal_learnBtn" />

            <Button
                android:id="@+id/galleryDeleteBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:text="@string/gal_delBtn" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/gall_lt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:columnCount="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
