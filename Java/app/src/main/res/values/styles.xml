<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/buttonBackgroundBlue</item>
        <item name="colorPrimary">@color/buttonBackgroundBlue</item>
        <item name="colorPrimaryDark">@color/buttonBackgroundBlue</item>
        <item name="colorSecondary">@color/buttonBackgroundBlue</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="voc5TextInput"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="voc5TextInput.EditText">
        <item name="android:padding">7dp</item>
    </style>

    <style name="voc5Button"
        parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="voc5Button.outlinedButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="voc5Button.textButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">12dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="voc5Button.gallerySrchSort"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12dp</item> 
    </style>

    <style name="button_style" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/buttonBackgroundBlue</item>
        <item name="backgroundTint">@color/buttonBackgroundBlue</item>
    </style>

    <style name= "AppTheme.CustomTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
